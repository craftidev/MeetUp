{% extends 'base.html.twig' %}

{% block title %}Se connecter!{% endblock %}

{% block body %}

<div class="login-container">
    <form method="post" class="login-form">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h1>S'identifier</h1>

        <div class="input-group">
            <label for="inputMail" class="big-label">Identifiant :</label>
            <input type="text" value="{{ last_username }}" name="mail" id="inputMail" class="form-control" autocomplete="username" required autofocus>
        </div>

        <div class="input-group">
            <label for="inputPassword" class="big-label">Mot de passe :</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        </div>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

            <div class="remember-forgot-group">
                <div class="remember-me">
                    <label class="label-checkbox">
                        <input type="checkbox" id="remember_me" name="_remember_me"> Se souvenir de moi
                        <span class="checkbox-icon"></span>
                    </label>
                </div>

                <a href="#" class="forgot-password">Mot de passe oubli√©</a>
            </div>

            <div class="button-container">
                <button class="button-green" type="submit">
                    Connexion
                </button>
            </div>
        </div>
    </form>
</div>
{% endblock %}
